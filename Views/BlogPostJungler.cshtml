@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
    
    var New_Articles = CurrentPage.Descendants().OrderBy("CreateDate desc").Take(1); //New Article

    var articles = CurrentPage.Descendants(4).OrderBy("CreateDate desc").Except(New_Articles); //List Article
}

<section class="ArticleDisplayBlog">
    <!--Body Articles-->
    <div class="row">

        <div class="large-9 large-push-3 end columns">
            <div class="ContentBody">
                <div class="RecentArticlesMetaTitle">
                    <h1>@CurrentPage.Name</h1>
                    <ul class="RecentArticlesMetaTitle2">
                        <li class="RecentArticlesMetaTitleBlog">
                            <p>
                                <i class="fa fa-calendar"></i>
                                <span>@CurrentPage.CreateDate.ToString("MMMM dd, yyyy")</span>
                            </p>
                        </li>
                        <li class="RecentArticlesMetaTitleBlog">
                            <p>
                                <i class="fa fa-calendar"></i>
                                <span>Map Version: 6.82</span>
                            </p>
                        </li>
                        <li class="RecentArticlesMetaTitleBlog">
                            <p>
                                <i class="fa fa-user"></i>
                                <span>Author: Legym</span>
                            </p>
                        </li>
                    </ul>
                </div>
                <img src="@CurrentPage.CourseImageBanner" />

                @CurrentPage.Description

                @CurrentPage.Textbox

            </div>
        </div>

        <div class="show-for-large-up large-3 pull-9 end columns">
            <div class="HomepageSidebarBlog">
                <div class="newsletter">
                    <h3 class="widget-title">
                        <span>The Newsletter</span>
                    </h3>
                    <div class="row">
                        <div class="large-12 columns end NewsletterTitle">
                            <ul>
                                <li><img src="http://hydra-media.cursecdn.com/dota2.gamepedia.com/archive/8/8e/20120717000916%21Anti-Mage_icon.png"><p>Access our articles as soon as they are published</p></li>
                                <li><img src="http://hydra-media.cursecdn.com/dota2.gamepedia.com/archive/5/59/20120717000933%21Dragon_Knight_icon.png"><p>Protect your privacy and learn to be the best.</p></li>
                                <li><img src="http://hydra-media.cursecdn.com/dota2.gamepedia.com/archive/8/8d/20120717001021%21Io_icon.png"><p>Access our articles as soon as they are published</p></li>
                            </ul>
                        </div>
                    </div>
                    <form>
                        <div class="row">
                            <div class="large-12 columns">
                                <label>
                                    <input type="text" placeholder="Email Address" />
                                </label>
                                <a href="#" class="button expand">Subscribe</a>
                            </div>
                        </div>
                    </form>

                </div>
                @*<div class="recommended">
                        <h3 class="widget-title">
                            <span>Recommended</span>
                        </h3>
                    </div>*@
            </div>
        </div>
    </div>
</section>

<!--Article Section-->
    @Umbraco.RenderMacro("RecommendedArticles")