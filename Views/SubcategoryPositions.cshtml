@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";

    var New_Articles = CurrentPage.Descendants(1).OrderBy("CreateDate desc").Take(1); //New Article 

    //var articles = CurrentPage.Descendants(5).OrderBy("CreateDate desc").Except(New_Articles); //List Article	
}

<div class="HomepageIntro">
    <div class="row">
        <div class="HomepageIntroContent">
            <!--New Articles-->
            <div class="small-12 medium-12 large-8 columns">
                @{
                    foreach (var New_Article in New_Articles)
                    {
                        <article class="NewArticle">
                            <a href="@New_Article.Url">
                                <img src="@New_Article.CourseImageBanner">
                            </a>
                            <h1>@New_Article.Name</h1>
                            <p>
                                Browser games are, in the vast majority, developed using
                                Flash technology, however more and more often we come
                                acrosssss
                            </p>
                        </article>
                    }
                }
            </div>
        </div>
    </div>
</div>








<section class="ArticleDisplay">
    <!--Body Articles-->
    <div class="row">


        <div class="large-9 large-push-3 columns">
            <div class="RecentArticles">
                <p>Browsing @CurrentPage.Name</p>
                <h1>Recent Articles</h1>
            </div>

            @Umbraco.RenderMacro("RazorListing")

            </div>

        <div class="show-for-large-up large-3 pull-9 columns">
            <div class="HomepageSidebar">
                <ul class="TopNavigation">
                    <li>
                        <nav class="CategoriesNaviation">
                            <h3>Categories</h3>
                            <ul>
                                <li>
                                    <a href="/Positions/Carry/">
                                        <i class="fa fa-home fa-fw fa-2x"></i>
                                        <span>Carry</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Positions/Support/">
                                        <i class="fa fa-bookmark fa-fw fa-2x"></i>
                                        <span>Support</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Positions/Semi-Carry/">
                                        <i class="fa fa-circle fa-fw fa-2x"></i>
                                        <span>Semi-Carry</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Positions/Offlane/">
                                        <i class="fa fa-leaf fa-fw fa-2x"></i>
                                        <span>Offlane</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Positions/Jungler/">
                                        <i class="fa fa-phone fa-fw fa-2x"></i>
                                        <span>Jungler</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </li>
                </ul>        

                <ul class="SecondNavigation">
                    <li>
                        <nav class="CategoriesNaviation">
                            <h3>Experience Filter</h3>

                            <ul>
                                <li class="Selected">
                                    <a href="/Positions/">
                                        <i class="fa fa-list fa-fw fa-2x"></i><span>No Filter</span>
                                    </a>
                                </li>

                                <li>
                                    <a href="/@CurrentPage.Name/Beginner/">
                                        <i class="fa fa-list fa-fw fa-2x"></i><span>Beginner</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/@CurrentPage.Name/Intermediate/">
                                        <i class="fa fa-list fa-fw fa-2x"></i><span>Intermediate</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/@CurrentPage.Name/Advance/">
                                        <i class="fa fa-list fa-fw fa-2x"></i><span>Advance</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </li>
                </ul>

            </div>
        </div>
    </div>
</section>

