@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
    var New_Articles = CurrentPage.Descendants(5).OrderBy("CreateDate desc").Take(1); //New Article  
         
}

<div class="row">
    <div class="show-for-small-only small-12 columns">
        <div id='cssmenu'>
            <ul>
                <li><a href='/Positions/'><span>Positions</span></a></li>
                <li><a href='/Metagame/'><span>Metagame</span></a></li>
                <li><a href='/Mechanics/'><span>Mechanics</span></a></li>
                <li><a href='/Heroes/'><span>Heroes</span></a></li>
            </ul>

            <select onchange="this.options[this.selectedIndex].value && (window.location = this.options[this.selectedIndex].value);">
                <option value="">Select a Category</option>
                <option value="/Positions/Carry/">Introduction To Dota2</option>
                <option value="/Positions/Support/">Recommended</option>
                <option value="/Positions/SemiCarry/">Editors Choice</option>
                <option value="/Positions/Offlane/">Miscellaneous</option>
            </select>

            <select onchange="location = this.options[this.selectedIndex].value;">
                <option value="/">Experience Filter</option>
                <option value="/">All</option>
                <option value="/Beginner/">Beginner</option>
                <option value="/Intermediate/">Intermediate</option>
                <option value="/Advance/">Advance</option>
            </select>
        </div>
    </div>
</div>


<div class="HomepageIntro">
    <div class="row">
        <div class="HomepageIntroContent">
            <!--New Articles-->
            <div class="small-12 medium-12 large-8 end columns">
                @{
                    foreach (var New_Article in New_Articles)
                    {
                        <article class="NewArticle">
                            <a href="@New_Article.Url">
                                <img src="@New_Article.test @New_Article.CourseImageBanner">
                            </a>
                            <h1>@New_Article.Name</h1>
                            <p class="show-for-medium-up show-for-landscape">
                                Browser games are, in the vast majority, developed using
                                Flash technology, however more and more often we come
                                across
                            </p>
                        </article>
                    }
                }
            </div>
        </div>
    </div>
</div>



<section class="ArticleDisplay">
    <!--Body Articles-->
    <div class="row">


        <div class="large-9 large-push-3 end columns">
            <div class="RecentArticles">
                <p>Browsing <span>@CurrentPage.Name</span></p>
                <h1>Recent Articles</h1>
            </div>

            @Umbraco.RenderMacro("RazorListing")

        </div>

        <div class="show-for-large-up large-3 pull-9 end columns">
            <div class="HomepageSidebar">
                <ul class="TopNavigation">
                    <li>
                        <nav class="CategoriesNaviation">
                            <h3>Categories</h3>
                            <ul class="TopNavigationSmall">
                                <li>
                                    <a href="#">
                                        <i class="fa fa-home fa-fw fa-2x"></i><span>Introduction into DOTA2</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <i class="fa fa-bookmark fa-fw fa-2x"></i><span>Recommended</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <i class="fa fa-circle fa-fw fa-2x"></i><span>Editors Choice</span>
                                    </a>
                                </li>

                                <li>
                                    <a href="#">
                                        <i class="fa fa-circle fa-fw fa-2x"></i><span>Miscellaneous</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </li>
                </ul>


                <ul class="SecondNavigation">
                    <li>
                        <nav class="CategoriesNaviation">
                            <h3>Experience Filter</h3>

                            <ul>
                                <li>
                                    <a href="/">
                                        <i class="fa fa-list fa-fw fa-2x"></i><span>All</span>
                                    </a>
                                </li>

                                <li>
                                    <a href="/Beginner/">
                                        <i class="fa fa-list fa-fw fa-2x"></i><span>Beginner</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Intermediate/">
                                        <i class="fa fa-list fa-fw fa-2x"></i><span>Intermediate</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Advance/">
                                        <i class="fa fa-list fa-fw fa-2x"></i><span>Advance</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </li>
                </ul>


